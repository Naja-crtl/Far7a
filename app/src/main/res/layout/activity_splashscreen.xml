<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">

    <!-- App Title -->
    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="cursive"
        android:text=" WEDDING APP"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- App Description TextView -->
    <!-- Semi-transparent background -->

    <!-- Let's Go Button at the Bottom -->

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_below="@id/splashTitle"
        android:layout_marginTop="129dp"
        android:background="#66000000"
        android:fontFamily="cursive"
        android:gravity="center"
        android:padding="10dp"
        android:text="Plan your dream wedding with ease. "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/letsGoButton"
        android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#000000"
        android:fontFamily="cursive"
        android:text="Start Planning"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
