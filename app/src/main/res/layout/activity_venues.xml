<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".venues">

    <TextView
            android:id="@+id/venuesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Choose your VENUE"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/cd_background"
            android:textColor="@color/white"
    />


    <ListView
            android:id="@+id/venuesListview"
            android:layout_width="409dp"
            android:layout_height="630dp"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp"
            android:background="@drawable/card_ripple"

    />
    <!-- Bottom NavBar to switch between pages -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:menu="@menu/bottom_nav_menu"
            android:background="@color/white" />
</LinearLayout>